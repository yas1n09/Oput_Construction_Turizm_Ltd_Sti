@using EntityLayer.Concrete
@model List<About>


<section class="about_section">
    <div class="container  ">
        @foreach(var item in Model){
        <div class="row">
            <div class="col-md-6">
                <div class="detail-box">
                    <div class="heading_container">
                        <h2>
                            @item.Title
                        </h2>
                    </div>
                    <p>
                        @item.Description
                    </p>
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="img-box">
                    <img src="~/template/images/about-img.jpg" alt="">
                </div>
            </div>

        </div>
        }
    </div>
</section>
