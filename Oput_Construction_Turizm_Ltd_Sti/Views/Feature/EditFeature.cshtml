@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
    <h6 class="text-white text-capitalize ps-3">Ana Sayfa Kayan Hizmet Düzenleme Sayfası</h6>
</div>
<br />
@using (Html.BeginForm("EditFeature", "Feature", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.FeatureID)

    @Html.Label("Hizmet Başlığı")
    @Html.TextBoxFor(x=>x.Header, new {@class = "form-control"})
    <br />
    @Html.Label("Hizmet Açıklaması")
    @Html.TextAreaFor(x=>x.Name, new {@class = "form-control"})
    <br />
    <button class="btn btn-primary">Güncelle</button>
}


