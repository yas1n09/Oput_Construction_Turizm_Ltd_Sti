@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
    <h6 class="text-white text-capitalize ps-3">Ana Sayfa Kayan Hizmet Ekleme Sayfası</h6>
</div>
<br />

@using (Html.BeginForm("AddFeature", "Feature", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.FeatureID)

    @* @Html.Label("Hizmet Başlığı") *@
    <label>Hizmet Başlığı</label>
    @Html.TextBoxFor(x=>x.Header, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Header)

    <br />
    @* @Html.Label("Hizmet Açıklaması") *@
    <label>Hizmet Açıklaması</label>
    @Html.TextBoxFor(x=>x.Name, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Name)

    <br />
    <button class="btn btn-primary">Ekle</button>
}



