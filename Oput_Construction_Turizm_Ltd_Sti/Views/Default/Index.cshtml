
@{
    Layout = null;
}

<!DOCTYPE html>
<html>


    @* @await Html.PartialAsync("HeaderPartial") *@

@await Component.InvokeAsync("Header")


<body>

    <div class="hero_area">
        <!-- header section strats -->

        @* @await Html.PartialAsync("NavbarPartial") *@
        @await Component.InvokeAsync("Navbar")


        <!-- end header section -->
        <!-- slider section -->
        @await Component.InvokeAsync("FeatureList")
        <!-- end slider section -->
    </div>


    <!-- service section -->
    @await Component.InvokeAsync("ServiceList")


    <!-- end service section -->
    <!-- about section -->
    @await Component.InvokeAsync("AboutList")


    <!-- end about section -->
    <!-- project section -->
    @await Component.InvokeAsync("ProjectList")


    <!-- end project section -->
    <!-- client section -->

    @await Component.InvokeAsync("TestimonialList")


    <!-- end client section -->
    <!-- why us section -->
    @await Component.InvokeAsync("WhyChooseUsList")

    <!-- end why us section -->
    <!-- contact section -->
   @*  @await Component.InvokeAsync("SendMessage") *@
    @await Html.PartialAsync("SendMessage")
    <!-- end contact section -->
    <!-- info section -->
    @await Component.InvokeAsync("ContactDetails")

    <!-- end info_section -->
    <!-- footer section -->
    <footer class="footer_section">
        <div class="container">
            <p>
                &copy; <span id="displayYear"></span> All Rights Reserved 
            </p>
        </div>
    </footer>
    <!-- footer section -->
    <!-- jQery -->
    <script src="~/template/js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- bootstrap js -->
    <script src="~/template/js/bootstrap.js"></script>
    <!-- owl slider -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
    </script>
    <!--  OwlCarousel 2 - Filter -->
    <script src="https://huynhhuynh.github.io/owlcarousel2-filter/dist/owlcarousel2-filter.min.js"></script>
    <!-- custom js -->
    <script src="~/template/js/custom.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap">
    </script>
    <!-- End Google Map -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var menuLinks = document.querySelectorAll('.navbar-nav .nav-link');

            menuLinks.forEach(function (link) {
                link.addEventListener("click", function (event) {
                    event.preventDefault(); // Sayfanın yeniden yüklenmesini önlemek için default davranışı engelle

                    var targetId = link.getAttribute("href").substring(1); // '#' işaretini kaldır
                    var targetSection = document.getElementById(targetId);

                    // Hedef bölüme kaydır
                    targetSection.scrollIntoView({
                        behavior: "smooth"
                    });
                });
            });
        });
    </script>

</body>

</html>