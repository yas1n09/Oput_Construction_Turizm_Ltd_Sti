@model EntityLayer.Concrete.WhyChooseUs
@{
    ViewData["Title"] = "EditWhyChooseUs";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
    <h6 class="text-white text-capitalize ps-3">Neden Biz? Düzenleme Sayfası</h6>
</div>
<br />
@using (Html.BeginForm("EditWhyChooseUs", "WhyChooseUs", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.WhyChooseUsID)

    @Html.Label("Hizmet Başlığı")
    @Html.TextBoxFor(x=>x.Title, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Title)

    <br />
    @Html.Label("Hizmet Açıklaması")
    @Html.TextAreaFor(x=>x.Description, new {@class = "form-control"})  
    @Html.ValidationMessageFor(x => x.Description)

    <br />
    @Html.Label("Hizmet Resimi")
    @Html.TextBoxFor(x=>x.ImageUrl, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.ImageUrl)

    <br />
    <button class="btn btn-primary">Güncelle</button>
}


